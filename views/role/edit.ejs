<%- partial("../common/header") %>

<div class="page-wrap">

  <% flash.get("error").forEach(function (message) { %>
    <%- message %>
  <% }) %>

  <%- partial("../common/settings-nav", {currentMenu: "roles"}) %>

  <div class="wrap">
    <div class="page-header">
      <h1 class="page-title">Edit User Role</h1>
    </div>

    <form action="/roles" method="POST" class="form wrap">
      <div class="primary">
        <div class="field">
          <label>Name<span class="required">*</span></label>
          <input type="text" name="name" class="value" />
        </div>

        <div class="field">
          <label>Description</label>
          <input type="text" name="description" class="value" />
        </div>
        <hr>
        <h2 class="page-title-2">Admin Rights</h2>
        <div class="field">
          <label class="checkbox"><input type="checkbox" name="checkbox" value="value">Applications</label>
        </div>
        <div class="field">
          <label class="checkbox"><input type="checkbox" name="checkbox" value="value">Models</label>
        </div>
        <div class="field">
          <label class="checkbox"><input type="checkbox" name="checkbox" value="value">Media</label>
        </div>
        <hr>
        <h2 class="page-title-2">Permissions</h2>
        <div class="list">
          <div class="list-header">
            <ul>
              <li class="roles">&nbsp;</li>
              <li class="roles">ADD</li>
              <li class="roles">EDIT</li>
              <li class="roles">VIEW</li>
              <li class="roles">PUBLISH</li>
              <li class="roles">DELETE</li>
              <li class="roles">ARCHIVE</li>
            </ul>
          </div>
          <div class="list-body">
              <div class="item">
                <div class="roles title">Draft</div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
              </div>
              <div class="item">
                <div class="roles">Submitted</div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
              </div>
              <div class="item">
                <div class="roles">Published</div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
              </div>
              <div class="item">
                <div class="roles">Archived</div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
                <div class="roles"><input type="checkbox" name="checkbox" value="value"></div>
              </div>
          </div>
        </div>
      </div>

      <div class="actions">
        <div class="field">
          <input type="submit" value="Save" class="primary-button" />
        </div>
        <hr>
        <div class="history">
          <div class="field">
            <label>Last updated</label>
            <div class="normal-text">date</div>
          </div>
          <div class="field">
            <label>Created</label>
            <div class="normal-text">date</div>
          </div>
          <div class="field">
            <a href="#"><span class="ico ico-clock3"></span>View edit history</a>
          </div>
        </div>
        <hr>
        <div class="field">
          <a href="#"><span class="ico ico-trash"></span>Delete this application</a>
        </div>
      </div>
    </form>

  </div>
</div>
