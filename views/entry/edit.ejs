<%- partial("../common/header") %>

<% var actions = ["canAdd","canEdit","canView","canPublish", "canDelete", "canArchive"]; %>
<div class="page-wrap">

  <% flash.get("error").forEach(function (message) { %>
    <%- message %>
  <% }) %>


  <div class="wrap">
    <div class="page-header">
      <h1 class="page-title">Edit Article</h1>
    </div>

    <form id="add-new-role-form" action="/roles" method="POST" class="form wrap">
      <input type="hidden" name="appId" value="<%- req.param('app_id') %>" />
      <div class="primary">
        <div class="field">
          <label>Name<span class="required">*</span></label>
          <input type="text" name="name" class="value" />
        </div>


        <div class="field">
          <label>Body</label>
          <input type="text" name="name" class="value" />
        </div>

        <hr>

        <div class="field">
          <label>Tags</label>
          <input type="text" name="name" class="value" />
        </div>


      </div>

      <div class="actions">
        <div class="history">
          <label class="page-text-1">status</label>
          <div class="dropdown-small">
            <select class="select-small">
            <option value="model">dffsfdsfsd</option>
            <option value="saab">saab</option>
            <option value="opel">Opel</option>
            <option value="audi">Audi</option>
            </select>
            <span class="ico ico-arrow-down3 icon-select"></span>
          </div>
          <br><br>
        </div>
        <div class="field">
          <input type="submit" value="Save" class="primary-button save-button" />
        </div>
        <hr>
        <div class="history">
          <div class="field">
            <label>Last updated</label>
            <div class="normal-text">date</div>
          </div>
          <div class="field">
            <label>Created</label>
            <div class="normal-text">date</div>
          </div>
          <div class="field">
            <a href="#"><span class="ico ico-clock3"></span>View edit history</a>
          </div>
        </div>
        <hr>
        <div class="field">
          <a href="#" class="delete-button"><span class="ico ico-trash"></span>Delete this role</a>
        </div>
      </div>
    </form>

  </div>
</div>
